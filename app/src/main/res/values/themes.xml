<resources>

    <!-- Base application theme. -->
    <style name="Theme.Gamedisc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/maven_pro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Gamedisc.Starting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Gamedisc</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_56_splash</item>
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>

    <style name="AppBarLayout">
        <item name="elevation">0dp</item>
    </style>

    <style name="CircleImageView">
        <item name="shapeAppearanceOverlay">@style/CircleImageViewShapeAppearanceOverlay</item>
    </style>

    <style name="CircleImageViewShapeAppearanceOverlay">
        <item name="cornerSize">8%</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edt_primary</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="EditText.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="LottieAnimationView">
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <style name="RatingMaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/RatingMaterialCardViewShapeAppearance</item>
    </style>

    <style name="RatingMaterialCardViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="ScrollView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@drawable/sv_primary</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@color/light_gray</item>
        <item name="android:submitBackground">@color/light_gray</item>
        <item name="android:theme">@style/SearchViewTheme</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="ShimmerFrameLayout">
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_base_alpha">0.2</item>
        <item name="shimmer_base_color">@color/light_gray</item>
        <item name="shimmer_highlight_alpha">0.4</item>
        <item name="shimmer_highlight_color">@color/gray</item>
        <item name="shimmer_repeat_mode">reverse</item>
    </style>

    <style name="TextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Header.1">
        <item name="android:textSize">@dimen/textsize_xlarge</item>
    </style>

    <style name="TextView.Header.2">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="TextView.Header.3">
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="TextView.Normal">
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar.Backable">
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

</resources>